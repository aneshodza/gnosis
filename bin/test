#!/bin/bash

white='\033[1;37m'
red='\033[0;31m'
green='\033[0;32m'

# TODO: Add other types of tests when they are implemented
rake redmine:plugins:test

if [[ $? -eq 0 ]]; then
  echo -e "${green}----------------------------------------"
  echo -e "Unit tests passed"
  echo -e "----------------------------------------${white}"
else
  echo -e "${red}----------------------------------------"
  echo -e "Unit tests failed"
  echo -e "----------------------------------------${white}"
  exit 1
fi
